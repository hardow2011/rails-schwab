  </div>

  <div>
    <input type="radio" class="btn-check" id="range-mo-6" name="range-selector" onclick="updateChartRange('mo_6')" autocomplete="off">
    <label class="btn btn-outline-secondary" for="range-mo-6">6 Mo</label><br>
  </div>

  <div>
    <input type="radio" class="btn-check" id="range-ytd" name="range-selector" onclick="updateChartRange('ytd')" autocomplete="off">
    <label class="btn btn-outline-secondary" for="range-ytd">YTD</label><br>
  </div>

  <div>
    <input type="radio" class="btn-check" id="range-yr_1" name="range-selector" onclick="updateChartRange('yr_1')" autocomplete="off">
    <label class="btn btn-outline-secondary" for="range-yr_1">1 Yr</label><br>
  </div>

  <div>
    <input type="radio" class="btn-check" id="range-yr_2" name="range-selector" onclick="updateChartRange('yr_2')" autocomplete="off">
    <label class="btn btn-outline-secondary" for="range-yr_2">2 Yr</label><br>
