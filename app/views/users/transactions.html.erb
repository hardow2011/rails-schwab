<div class="row row-cols-auto g-1">
  <div>
    <input type="radio" class="btn-check" id="range-mo-1" name="range-selector" onclick="updateChartRange('mo_1')" autocomplete="off">
    <label class="btn btn-outline-secondary" for="range-mo-1">1 Mo</label><br>
  </div>

  <div>
    <input type="radio" class="btn-check" id="range-mo-3" name="range-selector" onclick="updateChartRange('mo_3')" autocomplete="off">
