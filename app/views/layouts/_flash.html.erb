<div class="position-absolute w-100 z-3 pt-4 pe-none">
  <div class="row justify-content-center pe-none">
    <div class="col-sm-7 col-lg-5 col-xl-4 col-xxl-3 pe-auto">
      <% flash[:alert] and flash[:alert].each do |err| %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <p><%= err %></p>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        </div>
      <% end %>

      <% flash[:success] and flash[:success].each do |success| %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <p><%= success %></p>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      </div>
</div>
</div>
